{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["element-plus/global"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
